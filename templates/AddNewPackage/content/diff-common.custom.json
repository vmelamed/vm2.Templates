        "global.json": "copy",
        "LICENSE": "copy",
        "NuGet.config": "copy",
        "test.runsettings": "copy",
        ".github/dependabot.yaml": "copy",
        ".github/workflows/ClearCache.yaml": "copy",
        ".github/workflows/CI.yaml": "ask to merge",
        ".github/workflows/Prerelease.yaml": "ask to merge",
        ".github/workflows/Release.yaml": "ask to merge",
        "scripts/_common.diagnostics.sh": "copy",
        "scripts/_common.dump_vars.sh": "copy",
        "scripts/_common.flags.sh": "copy",
        "scripts/_common.predicates.sh": "copy",
